manifest:
  version: 1.0

automations:
  explain_code_experts:
    if:
      - true
    run:
      - action: explain-code-experts@v1 
        args:
          gt: 1
  add_code_reviewers:
    if:
      - true
    run:
      -action: add-reviewers@v1
        args:
          reviewers: {{ repo | codeExperts(gt=1) }}
